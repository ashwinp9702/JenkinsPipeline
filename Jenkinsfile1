
pipeline {
    agent any
    tools {
        maven "Maven3"
    }
    stages {
        stage('Hello') {
       
            steps {
                echo 'Hello World Ashwin-master'
            }
        }
        stage('Build') {
            steps {
                echo 'Building'
                git 'https://github.com/ashwinp9702/mavenwar1.git'
                
                bat "mvn -Dmaven.test.failure.ignore=true clean package"
              //  bat "mvn -DskipTests"
            }
      
            }
        stage('Test') {
            steps {
                echo 'Test Ashwin'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy Ashwin'
            }
        }
        stage('Directory') {
            steps {
                bat "dir"
            }
        }
    }
}
